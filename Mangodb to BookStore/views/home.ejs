<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>BookVerse | Home</title>
  <link rel="stylesheet" href="/style.css" />
</head>

<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="logo">📚 BookVerse</div>
      <a href="/add" class="btn-primary">+ Add Book</a>
    </nav>
  </header>

  <!-- Main Content -->
  <main>
    <h2 class="page-title">✨ Explore Your Bookshelf</h2>
    <div class="card-container">
      <% if (books.length > 0) { %>
      <%- books.map(book => `
          <div class="card">
            <div class="card-header">
              <h3>${book.title}</h3>
            </div>
            <div class="card-body">
              <p><strong>👤 Author:</strong> ${book.author}</p>
              <p><strong>📖 Genre:</strong> ${book.genre}</p>
              <p><strong>💰 Price:</strong> ₹${book.price}</p>
              <p>${book.description}</p>
            </div>
            <div class="card-actions">
              <a href="/editData?id=${book._id}" class="btn-edit">✏️ Edit</a>
               <a href="/deleteData?id=${book._id}" class="btn-delete">🗑️ Delete</a>
            </div>
          </div>
        `).join("") %>
      <% } else { %>
      <p class="no-books">No books added yet. Click <strong>+ Add Book</strong> to start!</p>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> BookVerse. All rights reserved.</p>
  </footer>
</body>

</html>